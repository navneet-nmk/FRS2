<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="4dp"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3.1dp"
        app:cardMaxElevation="2dp"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistant Professor"
                android:textSize="20sp"
                android:id="@+id/designationText"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LNMIIT, Jaipur"
                android:textSize="15sp"
                android:layout_below="@+id/designationText"
                android:layout_marginTop="10dp"
                android:id="@+id/locationText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Application Deadline"
                android:id="@+id/deadlineText"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/locationText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Posted On"
                android:id="@+id/postedText"
                android:layout_alignTop="@+id/deadlineText"
                android:layout_alignLeft="@+id/viewButton"
                android:layout_alignStart="@+id/viewButton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="17 Oct, 2015"
                android:id="@+id/deadlineValue"
                android:layout_below="@+id/deadlineText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="26 Sept, 2015"
                android:id="@+id/postedValue"
                android:layout_below="@+id/postedText"
                android:layout_alignLeft="@+id/postedText"
                android:layout_alignStart="@+id/postedText"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:id="@+id/viewButton"
                android:layout_alignBottom="@+id/locationText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
